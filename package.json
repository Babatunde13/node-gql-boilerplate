{
  "name": "node-gql-boilerplate",
  "version": "1.0.0",
  "description": "Node GraphQL Boilerplate",
  "author": "Babatunde Koiki <koikibabatunde14@gmail.com>",
  "main": "index.js",
  "engines": {
    "node": "18.17.1"
  },
  "scripts": {
    "generate": "graphql-codegen --config codegen.ts",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "npm run generate && ./node_modules/.bin/tsc -p .",
    "build:watch": "tsc -p . --watch",
    "start": "node dist/src/app.js",
    "lint": "eslint src/** __tests__/**",
    "lint:fix": "eslint src/** __tests__/** --fix",
    "test": "env NODE_ENV=test mocha --exit --timeout 10000 -- dist/__tests__/test_utils/before.js dist/__tests__/**/**/**/*.spec.js",
    "docker:build": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g'); DOCKER_BUILDKIT=1 docker build --build-arg NODE_VERSION=${NODE_VERSION} -t node-gql-boilerplate .",
    "predocker:run": "npm run docker:build",
    "docker:run": "docker run --name node-gql-boilerplate --env-file .env -d node-gql-boilerplate",
    "docker:start": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose up --build -d",
    "docker:stop": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose down",
    "predocker:test": "npm run docker:build -- --target build-stage",
    "docker:test": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose run -v ${PWD}/src:/app/src node-gql-boilerplate npm run test",
    "postdocker:test": "npm run docker:stop",
    "predocker:watch": "npm run docker:build -- --target build-stage",
    "docker:watch": "NODE_VERSION=$(echo $(node -v) | sed -e 's/v//g') docker-compose run -v ${PWD}/src:/app/src node-gql-boilerplate npm run test:watch",
    "postdocker:watch": "npm run docker:stop",
    "prepare": "husky install"
  },
  "keywords": [
    "node",
    "graphql",
    "typescript",
    "boilerplate",
    "mongodb"
  ],
  "license": "ISC",
  "dependencies": {
    "apollo-server": "3.12.0",
    "axios": "1.4.0",
    "bcrypt": "5.1.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "firebase-admin": "11.10.1",
    "google-auth-library": "9.0.0",
    "googleapis": "124.0.0",
    "graphql": "16.7.1",
    "jsonwebtoken": "9.0.1",
    "mailgun-js": "0.22.0",
    "mixpanel": "0.17.0",
    "mongoose": "7.4.2",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "8.0.2",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/bcrypt": "5.0.0",
    "@types/jsonwebtoken": "9.0.2",
    "@types/mailgun-js": "0.22.13",
    "@types/mocha": "10.0.1",
    "@types/node": "20.4.9",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "eslint": "8.46.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "nock": "13.3.3",
    "nodemon": "3.0.1",
    "supertest": "6.3.3",
    "typescript": "5.1.6",
    "yarn": "1.22.19"
  }
}
